<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upahaar">


    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:backgroundTint="#9AD2C8"
        
    >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:contentDescription="image" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:src="@drawable/logotext"
            android:contentDescription="image" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llPopularOccasion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Occasions"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/arrowicon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/iconbirthday"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bday"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nBirthday"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iconanniversary"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/ani"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nAnniversary"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconvalentine"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/valentines"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valentines\n Day"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:id="@+id/icondiwali"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/diwali"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nDiwali"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iconmothersday"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/mother"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mother's Day"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconteacher"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/teacher"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teacher's Day"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icons1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/iconchristmas"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/christmas"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nChristmas"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iconnewyear"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/newyear"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\n New Years"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconrakshabandhan"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/rb"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raksha Bandhan"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpecialMembers"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Members"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/arrowicon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="160dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/iconfather"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/father"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nFather"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iconmother"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/mother1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nMother"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconbrother"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bro"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nBrother"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:id="@+id/iconsister"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sis"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nSister"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iconbestfriend"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/bestf"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nBest Friend"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconwife"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/gf"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nGF/Wife"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icons2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:id="@+id/iconhusband"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:background="@drawable/iconbg">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bf"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BF/ Husband"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icongrandp"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:padding="6dp"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/grandp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grand Parents"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iconnewborn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/iconbg"
                        android:layout_marginLeft="10dp"
                        android:padding="6dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:src="@drawable/newb"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nNew Born"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>